= simple_form_for [:admin, @shelf, @segment] do |f|
  = f.input :identifier
  = f.input :interval_begin
  = f.input :interval_end
  = f.input :utilisation
  = f.input :width
  = f.input :no_of_levels

  => f.submit "Speichern + Neu", name: :save_and_new, class: "btn btn-primary"
  => f.submit "Speichern + Zur√ºck", class: "btn btn-default"
  = link_to "Abbrechen", admin_shelf_segments_path(@shelf), class: "btn btn-link"

javascript:
  $(function() {
    $("#segment_utilisation").slider({
      value: #{@segment.utilisation},
      min: 0,
      max: 1,
      step: 0.05,
      formatter: function(value) {
        return Math.round(value * 100) + "%";
      }
    });
  });
